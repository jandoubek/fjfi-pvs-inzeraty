<!DOCTYPE HTML>
<html lang="cz">

<head>
  <meta charset="utf-8">
    <script src="js/inzerat.js"></script>
    <script src="assets/js/jquery.blueimp-gallery.min.js"></script>
    <script src="assets/js/bootstrap-image-gallery.js"></script>
    <link rel="stylesheet" href="assets/css/blueimp-gallery.min.css">
    <link rel="stylesheet" href="assets/css/bootstrap-image-gallery.css">

    <style>
      ul {
        padding:0 0 0 0;
        margin:0 0 40px 0;
      }

      ul li {
        list-style:none;
        margin-bottom:10px;
      }
    </style>
  </meta>
</head>

<body>
<!--- modal-header, modal-body a modal-footer tvori strukturu PopUpu pomoci bootstrap -->
   <div class="modal-header">
     {if $user_id == $autor_id || true}
      <div class="input-group">
        <span class="input-group-addon" id="nazev_inzeratu" style="width: 7em"><b>Název inzerátu</b></span>
        <input type="text" class="form-control" placeholder="Vyplňte prosím"  value="{$inzerat['title']}">
      </div>
     {else}
       <b> {$inzerat->title} </b>
    {/if}
    <button type="button" class="close" data-dismiss="modal">&times;</button>

  </div>

  <div class="modal-body">
    {if $user_id == $autor_id}
      <label>Vyberte kategorii:</label>
       <select class="form-control">
        <option>Elektronika</option>
         <option>Společenské akce</option>
         <option>Jídlo</option>
        <option>Jiné</option>
      </select>
    {/if}


<h4> <b>Galerie</b> </h4>
    <!-- The container for the list of example images -->
    <div id="links">
        <a href="images/lednicka1.jpg" title="1. obrázek" data-gallery>
          <img src="images/thumbnails/lednicka1.jpg" alt="1. obrázek">
        </a>

        <a href="images/lednicka2.jpg" title="2. obrázek" data-gallery>
          <img src="images/thumbnails/lednicka2.jpg" alt="2. obrázek">
        </a>

        <a href="images/lednicka3.jpg" title="3. obrázek" data-gallery>
          <img src="images/thumbnails/lednicka3.jpg" alt="3. obrázek">
        </a>
    </div>

  <br>
<!-- The Bootstrap Image Gallery lightbox, should be a child element of the document body -->
<div id="blueimp-gallery" class="blueimp-gallery">
    <!-- The container for the modal slides -->
    <div class="slides"></div>
    <!-- Controls for the borderless lightbox -->
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
    <!-- The modal dialog, which will be used to wrap the lightbox content -->
    <div class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body next"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left prev">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        Previous
                    </button>
                    <button type="button" class="btn btn-primary next">
                        Next
                        <i class="glyphicon glyphicon-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


    <br>
    <br>
    {if $user_id == $autor_id}
      <div class="form-group">
        <label for="vlozObr">Vložit obrázek do galerie</label>
        <input type="file" id="vlozObr">
        <br>
        <button type="submit" class="btn btn-default">Vložit</button>
      </div>
    {/if}

      <label for="popis">Popis</label>
      <textarea {if $user_id != $autor_id} readonly {/if} class="form-control" rows="auto" style="color: black; background-color: white">
{$inzerat->body}
      </textarea>


    <br>

<div class="input-group">
      <span class="input-group-addon" id="cena" style="width: 7em"><b>Cena</b></span>
      <input readonly type="text" class="form-control" placeholder="{$inzerat->value}" aria-describedby="cena" id="cena_input" style="color: black; background-color: white">
</div>

  <br><br>

    <h4> Diskuze </h4>

    {foreach $comments as $komentar}
        <label for="prispevek">{$komentar->jmeno} {$komentar->prijm}, {$komentar->datum}</label>
        <textarea readonly class="form-control" rows="auto" style="color: black; background-color: white">
{$komentar->body}
        </textarea>
    {/foreach}

        <br>
        <h4> Přidat komentář</h4>
        {control comment}

  </div> <!-- modal-body -->

  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" id="inzerat_save_and_close">Uložit a zavřít</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">Zavřít</button>
  </div>

</body>

</html>

